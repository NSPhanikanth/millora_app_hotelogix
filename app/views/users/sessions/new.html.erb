<div class="row justify-content-center text-align-center text-center w-100 h-100">
  <div class="col-7 d-flex justify-content-center align-items-center" style="background-image: url(<%= image_path('login_background.png') %>">
      <%= image_tag("login_foreground_no_bg.png", class: "img img-fluid", style: "height: 204px") %>
  </div>

  <div class="col-5 p-5 h-100 d-flex align-items-center bg-blue justify-content-center">
    <div class="bg-white w-100 rounded p-5">
      <div class="login-header mb-5 d-flex justify-content-center">
        <%= image_tag("caratlane_2x.png", class: "img img-fluid", style: "height: 48px") %>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-control") do |f| %>
      <div class="field mb-3 w-100">
        <%= f.label :email, class: "float-start text-blue mb-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg border border-primary' %>
      </div>

      <div class="field mb-5">
        <%= f.label :password, class: "float-start text-blue mb-1" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg border border-primary' %>
      </div>

      <div class="actions w-100">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
      <% end %>

    </div>


    <%#= render "users/shared/links" %>
  </div>
</div>
